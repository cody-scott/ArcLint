            "match": "all"
        }
    ],
    "fields": [
        { 
            "fieldName": "Field1",
            "ruleGroup": {
                "match": "any",
                "groupName": "g1",
                "rules": []
            },
            "rules": [
                {
                    "ruleName": "regex",
